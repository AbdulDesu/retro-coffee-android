<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="cart"
            type="com.id124.retrocoffee.model.cart.CartModel" />
        <variable
            name="imageUrl"
            type="String" />

        <variable
            name="qty"
            type="String" />

        <variable
            name="price"
            type="String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_product"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:contentDescription="@string/img_description"
            android:elevation="4dp"
            android:scaleType="fitXY"
            android:src="@color/gray_300"
            app:riv_corner_radius="12dp"
            app:loadImage="@{imageUrl}"
            android:layout_margin="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{price}"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/iv_product"
            app:layout_constraintLeft_toLeftOf="@id/iv_product"
            app:layout_constraintRight_toRightOf="@id/iv_product"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/iv_product"
            app:layout_constraintLeft_toRightOf="@id/iv_product"
            android:text="@{cart.crProduct}"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"/>

        <ImageView
            android:id="@+id/iv_add"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_add"
            app:layout_constraintLeft_toLeftOf="@id/tv_name"
            app:layout_constraintTop_toBottomOf="@id/tv_name"/>

        <TextView
            android:id="@+id/tv_qty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{qty}"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/black"
            android:layout_marginHorizontal="32dp"
            app:layout_constraintTop_toTopOf="@id/iv_add"
            app:layout_constraintLeft_toRightOf="@id/iv_add"
            app:layout_constraintRight_toLeftOf="@id/iv_remove"/>

        <ImageView
            android:id="@+id/iv_remove"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_remove"
            android:layout_marginLeft="32dp"
            app:layout_constraintTop_toTopOf="@id/iv_add"
            app:layout_constraintLeft_toRightOf="@id/tv_qty"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_delete"
            android:layout_marginRight="32dp"
            app:layout_constraintTop_toTopOf="@id/iv_product"
            app:layout_constraintBottom_toBottomOf="@id/iv_product"
            app:layout_constraintRight_toRightOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>