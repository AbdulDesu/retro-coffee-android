<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        tools:context=".activity.customer.profile.ProfileActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginHorizontal="16dp"
            android:background="@color/background"
            android:fitsSystemWindows="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:titleTextColor="@color/primary" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_profile"
                    android:layout_width="110dp"
                    android:layout_height="132dp"
                    android:src="@drawable/profile"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/profile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="18dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Zulaikha"
                    android:textColor="@color/primary"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toTopOf="@id/profile_email"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/image_profile" />

                <TextView
                    android:id="@+id/profile_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="zulaikha17@gmail.com"
                    android:textColor="@color/primary"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/profile_name" />

                <TextView
                    android:id="@+id/profile_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="+62 81312372987"
                    android:textColor="@color/primary"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/profile_email" />

                <TextView
                    android:id="@+id/profile_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="Iskandar Street Block A Number 102"
                    android:textColor="@color/primary"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/profile_phone" />

                <View
                    android:id="@+id/v_1"
                    android:layout_width="match_parent"
                    android:layout_height="9dp"
                    android:layout_marginTop="32dp"
                    android:background="@color/shimmer"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/profile_address" />

                <TextView
                    android:id="@+id/order_history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="18dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Order History"
                    android:textColor="@color/primary"
                    android:textSize="18sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/v_1" />

                <TextView
                    android:id="@+id/see_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:fontFamily="@font/poppins"
                    android:text="See more"
                    android:textColor="@color/primary"
                    android:textSize="14sp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/order_history" />

                <View
                    android:id="@+id/v_2"
                    android:layout_width="match_parent"
                    android:layout_height="9dp"
                    android:layout_marginTop="32dp"
                    android:background="@color/shimmer"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/see_more" />

                <Button
                    android:id="@+id/btn_edit_profile"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="32dp"
                    android:background="@drawable/button_radius_white"
                    android:drawableEnd="@drawable/ic_arrow_forward"
                    android:fontFamily="@font/poppins_bold"
                    android:gravity="left|center_vertical"
                    android:text="Edit Profile"
                    android:textAllCaps="false"
                    android:textColor="@color/primary"
                    android:textSize="18sp"
                    app:backgroundTint="@null"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/v_2" />


                <Button
                    android:id="@+id/btn_edit_password"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="32dp"
                    android:background="@drawable/button_radius_white"
                    android:drawableEnd="@drawable/ic_arrow_forward"
                    android:fontFamily="@font/poppins_bold"
                    android:gravity="left|center_vertical"
                    android:text="Edit Password"
                    android:textAllCaps="false"
                    android:textColor="@color/primary"
                    android:textSize="18sp"
                    app:backgroundTint="@null"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/btn_edit_profile" />

                <Button
                    android:id="@+id/btn_faq"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="32dp"
                    android:background="@drawable/button_radius_white"
                    android:drawableEnd="@drawable/ic_arrow_forward"
                    android:fontFamily="@font/poppins_bold"
                    android:gravity="left|center_vertical"
                    android:text="FAQ"
                    android:textAllCaps="false"
                    android:textColor="@color/primary"
                    android:textSize="18sp"
                    app:backgroundTint="@null"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/btn_edit_password" />

                <Button
                    android:id="@+id/btn_help"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="32dp"
                    android:background="@drawable/button_radius_white"
                    android:drawableEnd="@drawable/ic_arrow_forward"
                    android:fontFamily="@font/poppins_bold"
                    android:gravity="left|center_vertical"
                    android:text="Help"
                    android:textAllCaps="false"
                    android:textColor="@color/primary"
                    android:textSize="18sp"
                    app:backgroundTint="@null"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/btn_faq" />

                <Button
                    android:id="@+id/btn_save"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="32dp"
                    android:background="@drawable/button_radius"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Save"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    app:backgroundTint="@null"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/btn_help" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
