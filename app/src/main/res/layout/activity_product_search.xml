<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.customer.favorite.FavoriteActivity">

        <LinearLayout
            android:id="@+id/tv_favoriteProduct"
            android:orientation="horizontal"
            android:layout_marginTop="50dp"
            android:layout_marginStart="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/bt_backButton"
                android:src="@drawable/ic_back_arrow"
                android:layout_gravity="center_vertical"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:tint="@color/black" />

            <TextView
                android:text="@string/search_product"
                android:textSize="20sp"
                android:paddingTop="4dp"
                android:fontFamily="@font/poppins_semibold"
                android:includeFontPadding="false"
                android:layout_marginStart="18dp"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <androidx.appcompat.widget.SearchView
            android:id="@+id/tv_everyoneFavorite"
            android:layout_marginTop="32dp"
            app:queryHint="Product Name..."
            android:layout_marginHorizontal="25dp"
            app:queryBackground="@color/white"
            android:fontFamily="@font/poppins_bold"
            android:textColor="#000000"
            android:layout_below="@id/tv_favoriteProduct"
            app:iconifiedByDefault="false"
            android:gravity="center"
            android:textSize="25sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>



        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_Product"
            android:layout_below="@id/tv_everyoneFavorite"
            android:layout_marginTop="12dp"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </RelativeLayout>

</layout>
